<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppAutoLAvado.Resumen">
    <ContentPage.Content>
        <Grid>
            <Image Source="logo.jpg"  Aspect="AspectFill"  Opacity="0.3"/>
            <Grid>
                <!--Definimos las filas-->
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <StackLayout Grid.Row="0" Padding="30,20">
                    <Label Text="Verifique su pedido para que puea ser prosesado" HorizontalOptions="CenterAndExpand"  FontSize="Large" TextColor="Aquamarine"/>
                    <Label Text="La fehca de su turno es:" FontSize="Large" />
                    <Label x:Name="lblFecha"/>
                    <Label Text="los Servicios que usted requere son:" FontSize="Large" />
                    <Label x:Name="lblServicios"/>
                    <Label Text="El valor a pagar es:" FontSize="Large"/>
                    <Label x:Name="lblPrecio"/>
                    <Label Text="Si usted esta de acuerdo con todo pulse Submit"  FontSize="Large" Margin="30,20" />
                    <Button x:Name="btnSubmit" Text="Submit" Margin="30,20" FontSize="Large"  />
                </StackLayout>
            </Grid>
        </Grid>
    </ContentPage.Content>
</ContentPage>